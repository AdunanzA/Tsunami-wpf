<UserControl x:Class="Tsunami.Pages.Add"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Tsunami.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Vertical">
            <Button Command="{Binding AddClick}" Width="200" Margin="0, 20, 0, 0">ADD TORRENT FROM FILE</Button>
            <TextBox Width="200" Margin="0, 20, 0, 0" IsEnabled="False" BorderBrush="DarkGray">Enter text to search...</TextBox>
            <Button Width="200" IsEnabled="False">SEARCH</Button>
        </StackPanel>
    </Grid>
</UserControl>

<Page x:Class="Tsunami.Gui.Wpf.Player"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:vlC="clr-namespace:xZune.Vlc.Wpf;assembly=xZune.Vlc.Wpf"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Tsunami.Gui.Wpf"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="Player">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <vlC:VlcPlayer x:Name="myPlayer" Background="Black" />
        <Slider Grid.Row="1" x:Name="movieProgress" Height="20"/>
        <Label Grid.Row="2" x:Name="Vol" Content="Volume" HorizontalAlignment="Right" Margin="0,0,81,0"/>
        <Slider Grid.Row="2" x:Name="volumeControl" ValueChanged="manageVolume" HorizontalAlignment="Right" VerticalAlignment="Center" Width="80" RenderTransformOrigin="0,0.556" Margin="0,5,6,7" Maximum="100" />
        <Button Grid.Row="2" x:Name="Play" Click="playButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Play" Height="30" Width="50" Margin="82,0,168,0"/>
        <Button Grid.Row="2" x:Name="Stop" Click="stopButton_Click" Content="Stop" Height="30" Width="40" RenderTransformOrigin="3.356,0.446" Margin="42,0,218,0"/>
        <Button Grid.Row="2" x:Name="Pause" Click="pauseButton_Click" Content="Pause" Height="30" Width="40" RenderTransformOrigin="3.356,0.446" Margin="132,0,128,0"/>

    </Grid>
</Page>
